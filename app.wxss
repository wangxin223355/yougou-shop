@import './styles/iconfont.wxss';

/* 全局样式初始化 */
page,
view,
text,
swiper,
swiper-item.image,
navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 全局样式变量 */
page {
  /* 主题颜色 */
  --themeColor: #eb4450;
  /* 定义统一的字体大小 */
  /* 1px = 2rpx */
  font-size: 28rpx;
}

image {
  width: 100%;
}
